
<Router AppAssembly="typeof(Blazor.Gitter.Core.Components.App).Assembly" />

@functions
{
		[Inject] ILocalisationHelper LocalisationHelper { get; set; }
		protected override async Task OnInitAsync()
		{
			await base.OnInitAsync();
			await LocalisationHelper.BuildLocalCulture();
			await LocalisationHelper.BuildLocalTimeZone();
			Console.WriteLine($"TZ:{LocalisationHelper.LocalTimeZoneInfo.DisplayName} {LocalisationHelper.LocalTimeZoneInfo.GetUtcOffset(DateTime.Now)}");
			Console.WriteLine($"CI:{LocalisationHelper.LocalCultureInfo.Name}");
		}
		//
}
