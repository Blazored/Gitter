@inherits MessageModel

<div id="@MessageData.Id" class="@MessageClassList(MessageData)" onmouseout="@MarkRead">
	<div class="d-flex w-100">
		<img src="@MessageData.FromUser.AvatarUrlSmall" width="38" height="38" style="border-radius:25%;" title="Filter by @MessageData.FromUser.Username" />
		<h5 class="mb-1 ml-2 mr-2">@MessageData.FromUser.DisplayName</h5>
		<small class="mt-1">@($"( @{MessageData.FromUser.Username} )")</small>
		<small class="text-muted ml-auto">@(LocalTime(MessageData.Sent))</small>
	</div>
	<div class="d-flex w-100">
		<p class="mb-1 mr-auto">
			@(new MarkupString(MessageData.Html))
		</p>
		<p>@(MessageData.Unread ? "Unread" : "")</p>
	</div>
</div>
